@import url(https://fonts.bunny.net/css?family=manrope:500,700)

$pale-blue = hsl(228, 45%, 44%)
$Very-Dark-Grayish-Blue = hsl(217, 19%, 35%)
$Desaturated-Dark-Blue = hsl(214, 17%, 51%)
$Grayish-Blue = hsl(212, 23%, 69%)
$Light-Grayish-Blue = hsl(210, 46%, 95%)

*
    margin 0
    box-sizing border-box

body
    font-family Manrope, sans-serif
    font-size 13px
    background-color $Light-Grayish-Blue

main
    min-height 100vh
    display flex
    justify-content center
    align-items center
    padding 24px
    
.card
    width 100%
    display flex
    flex-direction column 
    background-color white
    border-radius 10px
    overflow hidden

.card__image
    aspect-ratio 5 / 3
    overflow hidden
    img
        width 100%

.card__body
    color $Very-Dark-Grayish-Blue
    padding 32px
    h1
        margin-bottom: 24px
    p
        color $Desaturated-Dark-Blue
        line-height 1.5rem

.card__footer 
    position relative
    display flex
    justify-content space-between
    align-items center
    padding 16px 32px

.card__author 
    display flex
    gap 16px
    img 
        width 40px
        height 40px
        border-radius 50%

.card__author-info
    display: flex
    flex-direction: column
    p 
        margin: 0
        line-height: 1.2rem

.card__author-name 
    color $Very-Dark-Grayish-Blue
    font-weight: 700

.card__author-date
    color $Grayish-Blue

.button__share 
    background-color $Light-Grayish-Blue
    color $Desaturated-Dark-Blue
    border 0
    width 32px
    height 32px
    border-radius 50%
    z-index 10
    transition color, background-color 300ms ease-out

.share--active 
    background-color: $Desaturated-Dark-Blue
    color: $Light-Grayish-Blue
    transition color, background-color 300ms ease-out

.card__share-popup 
    display flex
    position absolute
    right 0
    bottom 0
    gap 12px
    width 100%
    z-index 2
    padding 24px 32px

    transform translateY(74px)
    background-color $Very-Dark-Grayish-Blue
    color $Light-Grayish-Blue
    span 
        text-transform uppercase
        letter-spacing 0.5rem

.card__share-list 
    display flex
    gap 14px

.popup--open
    transform translateY(0px)
    transition transform 250ms ease-out

.popup--closing
    transform translateY(74px)
    transition transform 200ms ease-in

.attribution 
    font-size 11px
    text-align center
    padding 16px 0
    a 
      color $pale-blue

@media screen and (min-width  780px) 
    .card
        max-width 720px
        flex-direction row
    
    .card__image
        aspect-ratio 1 / 1
        img
            height 100%
            width auto

    .card__share-popup
        width fit-content
        padding 16px 32px
        bottom 74px
        right 0
        border-radius 10px
        transform scaleY(0)
        transform-origin bottom
        
    .card__share-popup::after
            content ''
            width 16px
            height 16px
            position absolute
            bottom -8px
            right 40px
            background-color $Very-Dark-Grayish-Blue
            transform rotate(45deg)

    .popup--open
        transform scaleY(1)
        transition transform 150ms ease-in



    
